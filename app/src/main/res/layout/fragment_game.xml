<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg" />

    <!-- Main Content Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Scores Section -->
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="16dp">

            <!-- Player 1 Score -->
            <TextView
                android:id="@+id/text_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player-1 Score"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold" />

            <!-- Player 2 Score -->
            <TextView
                android:id="@+id/text_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player-2 Score"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:layout_toEndOf="@id/text_player1"/>

            <!-- Player 1's Score Display -->
            <TextView
                android:id="@+id/score_Player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_below="@id/text_player1"/>

            <!-- Player 2's Score Display -->
            <TextView
                android:id="@+id/score_Player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_below="@id/text_player2"/>
        </RelativeLayout>

        <!-- Game Board (Grid of Buttons) -->
        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="4"
            android:columnCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <!-- Buttons (Adjust dimensions and styling as needed) -->
            <Button
                android:id="@+id/btn0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="0"/>

            <Button
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="1"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="2"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="3"/>

            <Button
                android:id="@+id/btn4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="4"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="5"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="6"/>

            <Button
                android:id="@+id/btn7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="7"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="8"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="9"/>

            <Button
                android:id="@+id/btn10"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="10"/>

            <Button
                android:id="@+id/btn11"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="11"/>

            <Button
                android:id="@+id/btn12"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="12"/>

            <Button
                android:id="@+id/btn13"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="13"/>

            <Button
                android:id="@+id/btn14"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="14"/>

            <Button
                android:id="@+id/btn15"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:textSize="26sp"
                android:layout_margin="5dp"
                android:background="@drawable/button_border"
                android:tag="15"/>
        </GridLayout>

        <!-- Status Text -->
        <TextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="Status"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"/>

        <!-- Play Again Button -->
        <Button
            android:id="@+id/btn_play_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Play Again"
            android:textSize="26sp"
            android:backgroundTint="#ffbb00"/>

        <!-- Reset Game Button -->
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Reset Game"
            android:textSize="26sp"
            android:backgroundTint="#cc1234"/>
    </LinearLayout>

</FrameLayout>
