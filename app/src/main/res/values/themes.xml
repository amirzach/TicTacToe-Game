<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NavigationDrawer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue4</item>
        <item name="colorPrimaryVariant">@color/blue4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal1</item>
        <item name="colorSecondaryVariant">@color/teal2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonBorderStyle">
        <item name="android:background">@drawable/button_border</item>
        <item name="android:textSize">26dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>